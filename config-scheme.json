{
  "title": {
    "type": "string",
    "default": "My App"
  },
  "defaultLanguage": {
    "regexp": "/^[a-z]{2}$/",
    "default": "en"
  },
  "defaultLanguageFallback": {
    "type": "boolean",
    "default": false
  },
  "theme": {
    "allow": ["ios", "material", "ios-material", "material-ios"],
    "default": "material"
  },
  "color": {
    "regexp": "/^[a-z]+$/",
    "default": "indigo"
  },
  "layout": {
    "allow": ["default", "white", "dark"],
    "default": "default"
  },
  "statusbarVisibility": {
    "type": "boolean",
    "default": true
  },
  "statusbarTextColor": {
    "allow": ["black", "white"],
    "default": "white"
  },
  "statusbarBackgroundColor": {
    "regexp": "/^#[0-9a-f]{6}$/i",
    "default": "#000000"
  },
  "iconBackgroundColor": {
    "regexp": "/^#[0-9a-f]{6}$/i",
    "default": "#ffffff"
  },
  "useIconFonts": {
    "props": {
      "framework7": {
        "type": "boolean",
        "default": false
      },
      "material": {
        "type": "boolean",
        "default": false
      },
      "ion": {
        "type": "boolean",
        "default": false
      },
      "fontawesome": {
        "type": "boolean",
        "default": false
      }
    }
  },
  "limitApplicationWidth": {
    "regexp": "/^[0-9]+$/",
    "default": 320
  },
  "limitApplicationHeight": {
    "regexp": "/^[0-9]+$/",
    "default": 570
  },
  "limitedSizeBodyBackgroundColor": {
    "regexp": "/^#[0-9a-f]{6}$/i",
    "default": "#333333"
  },
  "showPhoneFrameOnDesktop": {
    "type": "boolean",
    "default": true
  },
  "phoneFrameBodyBackgroundColor": {
    "regexp": "/^#[0-9a-f]{6}$/i",
    "default": "#fafafa"
  },
  "framework7parameters": {
    "type": "object"
  },
  "materialSubnavbarFix": {
    "type": "boolean",
    "default": true
  },
  "restoreHistory": {
    "type": "boolean",
    "default": true
  },
  "restoreComponentData": {
    "type": "boolean",
    "default": true
  },
  "completeRoutesFile": {
    "type": "boolean",
    "default": true
  },
  "firebase": {
    "props": {
      "apiKey": {
        "type": "string"
      },
      "authDomain": {
        "type": "string"
      },
      "databaseURL": {
        "type": "string"
      },
      "storageBucket": {
        "type": "string"
      },
      "projectId": {
        "type": "string"
      },
      "enableFirestore": {
        "type": "boolean",
        "default": false
      },
      "allowEmailLogin": {
        "type": "boolean",
        "default": false
      },
      "allowEmailRegistration": {
        "type": "boolean",
        "default": false
      }
    }
  },
  "devFirebase": {
    "props": {
      "deployDevRulesOnTesting": {
        "type": "boolean",
        "default": false
      },
      "apiKey": {
        "type": "string"
      },
      "authDomain": {
        "type": "string"
      },
      "databaseURL": {
        "type": "string"
      },
      "storageBucket": {
        "type": "string"
      },
      "projectId": {
        "type": "string"
      },
      "enableFirestore": {
        "type": "boolean",
        "default": false
      },
      "allowEmailLogin": {
        "type": "boolean",
        "default": false
      },
      "allowEmailRegistration": {
        "type": "boolean",
        "default": false
      }
    }
  },
  "loginRequiredForAllPages": {
    "type": "boolean",
    "default": false
  },
  "appStoreId": {
    "type": "string"
  },
  "playStoreId": {
    "type": "string"
  },
  "useCordovaPlugins": {
    "type": "array",
    "default": []
  },
  "cordovaPreferences": {
    "type": "object",
    "default": {
      "DisallowOverscroll": true
    }
  },
  "resetLocalStorageOnVersionChange": {
    "type": "boolean",
    "default": false
  },
  "preloadImages": {
    "type": "boolean",
    "default": true
  },
  "buildSourcemaps": {
    "type": "boolean",
    "default": false
  },
  "editorConfig": {
    "type": "object",
    "default": {
      "root": "true",
      "[*]": null,
      "indent_style": "space",
      "indent_size": "2",
      "charset": "utf-8",
      "trim_trailing_whitespace": "true",
      "insert_final_newline": "true",
      "end_of_line": "lf",
      "max_line_length": "null"
    }
  },
  "eslint": {
    "props": {
      "extends": {
        "allow": ["airbnb", "standard"],
        "default": "airbnb"
      },
      "rules": {
        "type": "object",
        "default": {
          "semi": ["error", "never"]
        }
      }
    }
  },
  "fixCodeOnTest": {
    "type": "boolean",
    "default": true
  },
  "fixCodeOnBuild": {
    "type": "boolean",
    "default": true
  },
  "devServerPort": {
    "regexp": "/^[0-9]{4}$/",
    "default": "8080"
  },
  "gitignore": {
    "type": "object"
  },
  "npmignore": {
    "type": "object"
  }
}
